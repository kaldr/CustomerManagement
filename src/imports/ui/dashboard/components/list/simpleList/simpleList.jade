md-toolbar(layout='row' md-colors="{background:'{{$ctrl.theme.toolbarColor}}'}")
  .md-toolbar-tools(layout='row' layout-align='space-between center')
    md-menu(flex align='left')
      md-button.md-icon-button(ng-click='$mdOpenMenu()')
        md-icon(md-colors="{color:'grey-500'}" md-menu-origin) menu
        md-tooltip 菜单
      md-menu-content(width=3)
        md-menu-item
          md-button(md-menu-align-target ng-click='vm.closeList()') 
            md-icon visibility_off
            |隐藏
        md-menu-item
          md-button 
            md-icon visibility
            |显示
    span(flex  align='center') {{$ctrl.theme.title}}
    md-menu(flex align='right')
      md-button.md-icon-button(ng-click='$mdOpenMenu()')
        md-icon(md-colors="{color:'grey-500'}" md-menu-origin ng-click='$mdOpenMenu()') desktop_windows
        md-tooltip 显示
      md-menu-content(width=3)
        md-menu-item(ng-repeat='menuitem in $ctrl.menu.display')
          md-button(ng-class='menuitem.name' ng-if='menuitem.target' md-menu-align-target ng-click='menuitem["action"]()') 
            md-icon {{menuitem.icon}}
            |{{menuitem.title}}
          md-button(ng-class='menuitem.name' ng-if='menuitem.target==false' ng-click='menuitem["action"]()') 
            md-icon {{menuitem.icon}}
            |{{menuitem.title}}


md-content(md-colors="{background:'{{$ctrl.theme.listColor}}'}" align='center')
  md-subheader.md-no-sticky(md-colors="{background:'{{$ctrl.theme.listColor}}'}") 今日完成情况
  basic-chart(component="$ctrl.ID" config='$ctrl.chart' )
  md-list()  
    md-list-item.md-3-line.md-long-text(ng-repeat="item in [1,2,3,4,5,6]" ng-click='null' )
      .md-list-item-text(layout='column')
        h3 黄宇
        h4 好人
        p 这是一场没有解决的表扬
