md-toolbar(md-scroll-shrink md-colors="{background:'{{$ctrl.theme.toolbarColor}}'}" )
  .md-toolbar-tools(layout='row' layout-align='space-between center')
    md-menu(flex align='left')
      md-button.md-icon-button(ng-click='$mdOpenMenu()')
        md-icon(md-colors="{color:'grey-500'}" md-menu-origin) menu
        md-tooltip 菜单
      md-menu-content(width=3)
        md-menu-item(ng-repeat='menuitem in $ctrl.menu.action')
          md-button(ng-class='menuitem.name' ng-disabled='menuitem.name==$ctrl.panel[$ctrl.ID].status' ng-if='menuitem.target' md-menu-align-target ng-click='menuitem["action"]()') 
            md-icon {{menuitem.icon}}
            |{{menuitem.title}}
          md-button(ng-class='menuitem.name' ng-disabled='menuitem.name==$ctrl.panel[$ctrl.ID].status' ng-if='menuitem.target==false' ng-click='menuitem["action"]()') 
            md-icon {{menuitem.icon}}
            |{{menuitem.title}}
            
    span.animated(flex align='center' ng-hide="$ctrl.panelmode=='fullscreen'" ng-class1="{'fadeOutRight':$ctrl.panelmode=='fullscreen','fadeInLeft':$ctrl.panelmode!='fullscreen'}") {{$ctrl.theme.title}}
    span.animated(flex align='left' ng-show="$ctrl.panelmode=='fullscreen'" ng-class1="{'fadeOutRight':$ctrl.panelmode!='fullscreen','fadeInLeft':$ctrl.panelmode=='fullscreen'}")
      md-input-container
        label 分配状态
        md-select(ng-model="selectedVegetables"
                   md-on-close="clearSearchTerm()"
                   data-md-container-class="selectdemoSelectHeader"
                   multiple)
          md-select-header.demo-select-header
            input.demo-header-searchbox(md-text ng-model="searchTerm"
                  type="search"
                  placeholder="Search for a vegetable..")
          md-optgroup(label="vegetables")
            md-option(ng-value="vegetable" ng-repeat="vegetable in vegetables | filter:searchTerm") {{vegetable}}

    md-menu(flex align='right')
      md-button.md-icon-button(ng-click='$mdOpenMenu()')
        md-icon(md-colors="{color:'grey-500'}" md-menu-origin ng-click='$mdOpenMenu()') desktop_windows
        md-tooltip 显示
      md-menu-content(width=3)
        md-menu-item(ng-repeat='menuitem in $ctrl.menu.display')
          md-button(ng-class='menuitem.name' ng-disabled='menuitem.name==$ctrl.panel[$ctrl.ID].status' ng-if='menuitem.target' md-menu-align-target ng-click='menuitem["action"]()') 
            md-icon {{menuitem.icon}}
            |{{menuitem.title}}
          md-button(ng-class='menuitem.name' ng-disabled='menuitem.name==$ctrl.panel[$ctrl.ID].status' ng-if='menuitem.target==false' ng-click='menuitem["action"]()') 
            md-icon {{menuitem.icon}}
            |{{menuitem.title}}
